/* 引入CSS */
@import "/template/song/song.wxss";
@import "/template/public/bottom-play.wxss";

/* pages/home/index.wxss */
.container{
  padding-bottom: 50px;
}
/* header */
.header{
  display: flex;
  padding-bottom: 10px;
  background-color: #b3d4db;
  color: #fff;
  justify-content: center;
}
.header navigator{
  margin: 0 5px;
  padding: 0 10px 8px;
}
.header navigator.on{
  background: linear-gradient(#fff,#fff) no-repeat center bottom/ 90% 2px;
}
/* banner */
.home-banner{
  background: linear-gradient(#b3d4db,#b3d4db) no-repeat left top/100% 200rpx;
}
.home-banner swiper{
  height: 300rpx;
}
.home-banner swiper-item{
  box-sizing: border-box;
  padding: 0 10px;
}
.home-banner image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
/* 国家地区 */
.orign-type{
  display: flex;
  justify-content: space-around;
  padding: 15px 0 10px;
  border-bottom: 1px solid #efefef;
}
.orign-type navigator image{
  width: 80rpx;
  height: 80rpx;
}
.orign-type navigator text{
  display: block;
  text-align: center;
}

/* 热门歌曲 */
.hot-music{
  margin-top: 25px;
}
.music-item + .music-item{
  margin-top: 15px;
}
.list-head{
  padding-bottom: 10px;
}
.list-head image{
  margin-left: 10px;
  margin-right: 5px;
  width: 24px;
  height: 24px;
  vertical-align: bottom;
}
.list-head text{
  vertical-align: bottom;
}
.list-body{
  padding: 0 10px;
}
