/* pages/home/index.wxss */
/* header */
.header{
  display: flex;
  padding-bottom: 10px;
  background-color: #b3d4db;
  color: #fff;
  justify-content: center;
}
.header navigator{
  margin: 0 5px;
  padding: 0 10px 8px;
}
.header navigator.on{
  background: linear-gradient(#fff,#fff) no-repeat center bottom/ 90% 2px;
}
/* banner */
.home-banner{
  background: linear-gradient(#b3d4db,#b3d4db) no-repeat left top/100% 200rpx;
}
.home-banner swiper{
  height: 300rpx;
}
.home-banner swiper-item{
  box-sizing: border-box;
  padding: 0 10px;
}
.home-banner image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 5px;
}