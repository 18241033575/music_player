<!-- 底部播放器 -->
<template name='bottom-play'> 
  <navigator url='/pages/play-page/playing' hover-class='hover-player' class='bottom-player'>
    <view class='player-cover'>
      <image src="{{cover}}" mode='widthFix'></image>
    </view>

  <view class='player-btn'>
      <image src='/images/player.png'></image>
    </view>

    <view class='player-album'>
      <text class='subtr'>{{ name }}</text>
      <text>{{ singer }}</text>
    </view>
  </navigator>
</template>